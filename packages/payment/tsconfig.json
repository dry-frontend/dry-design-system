{
  "extends": "@dry/configs-ts-react",
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "../styles/*": ["styles/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx",
    "**/*.stories.tsx"
  ]
}
